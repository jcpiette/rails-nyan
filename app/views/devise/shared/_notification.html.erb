<div class="user-settings-notification" style="display: none;" data-user-menu-tab-target="notification">
  <h1>Notification</h1>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :notification_friend_invite,
              required: true, input_html: { class: "toggle" } %>
      <%= f.input :notification_event_invite,
          required: true, input_html: { class: "toggle" } %>
      <%= f.input :notification_event_update,
                  required: true, input_html: { class: "toggle" } %>
      <%= f.input :notification_friend_update,
                  required: true, input_html: { class: "toggle" } %>
    </div>
    <br>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
