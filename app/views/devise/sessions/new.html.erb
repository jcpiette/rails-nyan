

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                 :as => :hidden %>
    <%= f.input :password,
                required: false,
                 :as => :hidden %>

</div>
<form>
<div class="login-box">
<h2>Login</h2>
<form>
<label>Email</label>
<div class="user-box">
<input class="required" id="user_email"  name="user[email]" type="text">

</div>
<label>Password</label>
<div class="user-box" >
<input class="required" id="user_password"  name="user[password]" type="password">

</div>

  <%= f.button :submit, "Submit", class: "btn btn-flat" %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>


    <button type="button" class="login-with-google-btn" >
    Sign in with Google
    </button>
</div>

<% end %>

</form>



