<div class="user-settings-menu">
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">
          <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
            <i class="fa-solid fa-user-shield"></i>  Account
          <% end %>
        </th>
      </tr>
      <tr>
        <td>
          <%= link_to user_address_path(current_user), class: "dropdown-item" do %>
            <i class="fa-solid fa-address-book"></i> Address
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to user_preferences_path(current_user), class: "dropdown-item" do %>
            <i class="fa-solid fa-sliders"></i> Preferences
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to user_notification_path(current_user), class: "dropdown-item" do %>
            <i class="fa-solid fa-bell"></i>  Notifications
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <br>
  <p>Unhappy?</p>
  <p>
    <%= link_to "Delete my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-secondary" %>
  </p>

</div>
