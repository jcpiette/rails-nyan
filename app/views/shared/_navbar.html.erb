<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="navbar-logo">
      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "white_logo.png" %><h3>Not Your Average Night</h3>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <div class="notification" data-controller="notification-subscription" data-notification-subscription-notification-id-value="<%= current_user.id %>">
            <li>
                <div class="notifications" data-notification-subscription-target="notifications">
                  <a tabindex="0" class="btn btn-info" role="button" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-trigger="focus" data-bs-title="My Notifications" data-bs-html="true" data-bs-content='<%= render 'notifcations/popover' %>'>
                      <i class="fa-solid fa-bell"></i> Notifications <span class="badge badge-light"> <%= @notifications.count %> </span>
                  </a>
                </div>
            </li>
          </div>
          <li class="nav-item dropdown">
            <%= image_tag current_user.img_url, class: "avatar ", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <li>
                <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                  <i class="fa-solid fa-user-gear" style="color:MediumSeaGreen;"></i>
                  Profile Settings
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" do %>
                  <i class="fa-solid fa-right-from-bracket" style="color:Tomato;"></i>
                   Log out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-danger" %>
            <%= link_to "Login", new_user_session_path, class: "btn btn-danger" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
