<% if notice %>
  <div class="flash flash-warning alert alert-dismissible fade show" role="alert">
    <span>
      <strong><i class="fa-solid fa-circle-dot"></i></strong>
      <%= notice %>
    </span>
    <a data-bs-dismiss="alert" aria-label="Close"> <i class="fas fa-times"></i></a>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-danger alert alert-dismissible fade show" role="alert">
    <span>
      <strong><i class="fa-solid fa-circle-dot"></i></strong>
      <%= alert %>
    </span>
    <a data-bs-dismiss="alert" aria-label="Close"><i class="fas fa-times"></i></a>
  </div>
<% end %>
