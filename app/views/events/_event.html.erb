<div id="<%= dom_id event %>">

    <h3><strong><%= event.title %></strong><h3>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= event.location %>
  </p>

  <p>
    <strong>Event date:</strong>
    <%= event.event_date %>
  </p>

  <p>
    <strong>Created By:</strong>
    <%= User.find(event.user_id).full_name %>
  </p>

  <p>
    <strong>Who's Going:</strong>
    <ul>
    <% @members.where(event_id: event).each do |member| %>
      <li><%= User.find(member.user_id).full_name%></li>
    <% end %>
    </ul>
  </p>

</div>
